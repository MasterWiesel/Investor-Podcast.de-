---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Investor Podcast - Ihr Podcast für Finanzen, Börse und Wirtschaft" />
    <link rel="icon" type="image/png" href="https://perfectio-die-finanzmakler.de/public/images/favicon.png" />
    <link rel="apple-touch-icon" href="https://perfectio-die-finanzmakler.de/public/images/apple-touch-icon.png" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <!-- Klaro Cookie Consent -->
    <link rel="stylesheet" href="/css/klaro.min.css" />
    <script is:inline src="/js/klaro.js" defer></script>
    <script is:inline src="/js/klaro-config.js" defer></script>

    <!-- Analytics Script Template (loaded by Klaro after consent) -->
    <script type="text/plain" data-type="application/javascript" data-name="google-analytics">
      (function() {
        var analyticsScript = document.createElement('script');
        analyticsScript.async = true;
        analyticsScript.src = 'https://www.googletagmanager.com/gtag/js?id=G-H3SRNSWEL1';
        document.head.appendChild(analyticsScript);

        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-H3SRNSWEL1');
      })();
    </script>
  </head>
  <body class="bg-cream-100 text-gray-800">
    <slot />
    
    <!-- Initialize Klaro immediately after DOM is ready -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        // Wait a short moment to ensure Klaro is fully loaded
        setTimeout(function() {
          if (window.klaro && window.klaroConfig) {
            window.klaro.show(window.klaroConfig);
          }
        }, 100);
      });
    </script>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  :root {
    --cream-50: #fbf7f0;
    --cream-100: #f5e9db;
    --cream-200: #e8dcc2;
  }
</style>
