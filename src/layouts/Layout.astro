---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Investor Podcast - Ihr Podcast für Finanzen, Börse und Wirtschaft" />
    <link rel="icon" type="image/png" href="https://perfectio-die-finanzmakler.de/public/images/favicon.png" />
    <title>{title}</title>
  </head>
  <body class="bg-cream-100 text-gray-800">
    <slot />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  :root {
    --cream-50: #fbf7f0;
    --cream-100: #f5e9db;
    --cream-200: #e8dcc2;
  }
</style>
